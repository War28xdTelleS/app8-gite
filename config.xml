<?xml version="1.0" encoding="utf-8"?>
<widget xmlns ="http://www.w3.org/ns/widgets"
xmlns:gap = "http://phonegap.com/ns/1.0"
id="com.phonegap.app8"
version ="1.0.0">

<name>app8 MOSTRAR APLICACIONES</name>

<description>
Aplicacion que mostrará y ejecutará 3 aplicaciones anteriores (la app1 Datos del Dispositivo, la app5 Vibrar y la app7 Deslizar), es decir, tendrá una pagina principal con 3 botones, los cuales ejecutaran las aplicaciones mencionadas.
</description>
<author href="https://build.phonegap.com" email="laloxd0177@gmail.com">
Jose Eduardo Telles Guerrero
</author>

<!--Personalizala aplicacion y plataforma-->
<preference name="orientation"    value="default"/>
<!--<perference name="orientation"    value="portrait"/>
<perference name="orientation"    value="landscape"/>-->
<preference name="target-device"    value="universal"/>
<preference name="fullscreen"    value="true"/>
<preference name="android-installLocation"    value="auto"/>
<preference name="permissions"    value="INTERNET"/>
<!-- Para accesar a paginas de internet-->
 <allow-intent href="https://*/*"/>
 <acess origin="https://*/*"/>
 <allow-intent href="http://*/*"/>
 <acess origin="http://*/*"/>
 <plugin name="cordova-plugin-whitelist" source="npm"/>
 
<!--Plugins-->
<!--Core plugins-->
<plugin name="cordova-plugin-device" spec="~1.1.4"/>
<plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
<plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>

<!--<plugin name="cordova-plugin-geolocation" source="npm"/>-->
<!--Third part plugins-->

<!--Colocar icono app-->

<icon src="res/android/mdpi.png"/>
</widget>